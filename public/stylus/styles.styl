@import "normalize.styl"
gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0
//bootstrap default font-size is too small so we change it
html
	font-size 16px
body
	font-family 'Varela Round', sans-serif
	font-size 1em
	background-image url("../img/blue.png")
figure
	margin 0
img
	vertical-align top
header
	#brand
		max-width 100px 
		margin-top -30px
	.bootstrap-switch
		top 13px
		float right
		margin-right 20px
	
.col-lg-1, .col-lg-10, .col-lg-11, .col-lg-12, .col-lg-2, .col-lg-3, .col-lg-4, .col-lg-5, .col-lg-6, .col-lg-7, .col-lg-8, .col-lg-9, .col-md-1, .col-md-10, .col-md-11, .col-md-12, .col-md-2, .col-md-3, .col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-9, .col-sm-1, .col-sm-10, .col-sm-11, .col-sm-12, .col-sm-2, .col-sm-3, .col-sm-4, .col-sm-5, .col-sm-6, .col-sm-7, .col-sm-8, .col-sm-9, .col-xs-1, .col-xs-10, .col-xs-11, .col-xs-12, .col-xs-2, .col-xs-3, .col-xs-4, .col-xs-5, .col-xs-6, .col-xs-7, .col-xs-8, .col-xs-9 {
    min-height 0px
    padding-left 0px
    padding-right 0px
    position relative
}
.container
	padding 1.4rem
	font-size 0
	text-align center
	width 100%
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.author
	color gris_claro
@media screen and (min-width:480px)

	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width:1000px)
	body
		background-image url("../img/blue.png")
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				cursor pointer
				display block
				padding 1em
				text-transform uppercase
				border-top 5px solid transparent
				transition .3s border-top
				&:hover
					border-top 5px solid gris_claro
	.music
		width 32.5em
		float left
		.description
			display none
	
	.header
		height auto
		border none
		.title
			display none
	.logo
	.playlist
		display block
.thumbnail 
	margin-bottom 0px
	padding 0px
	margin-left 0px
	border 0px
	border-radius 0px

